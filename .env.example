# ==================================
# Flipper AI - Environment Configuration
# ==================================
# Copy this file to .env.local and fill in your values.
# See src/lib/env.ts for validation schema.

# ---- Core ----
NODE_ENV="development"

# ---- Firebase (Authentication & Database) ----
# Get these from Firebase Console: https://console.firebase.google.com/
# Project Settings > General > Your apps > Web app
NEXT_PUBLIC_FIREBASE_API_KEY="your-api-key"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your-project-id"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your-project.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="your-sender-id"
NEXT_PUBLIC_FIREBASE_APP_ID="your-app-id"

# Firebase Admin SDK (Server-side only)
# Get from: Project Settings > Service accounts > Generate new private key
# Store the entire JSON contents as a single-line string
FIREBASE_SERVICE_ACCOUNT_KEY='{"type":"service_account","project_id":"...","private_key":"..."}'

# ---- Encryption ----
# Generate: openssl rand -base64 32
ENCRYPTION_SECRET="your-encryption-secret-here"

# ---- OAuth Providers (Optional) ----
# Google: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
ENABLE_OAUTH_GOOGLE=false

# GitHub: https://github.com/settings/developers
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""
ENABLE_OAUTH_GITHUB=false

# Facebook: https://developers.facebook.com/apps/
FACEBOOK_APP_ID=""
FACEBOOK_APP_SECRET=""
FACEBOOK_REDIRECT_URI="http://localhost:3000/api/auth/facebook/callback"
ENABLE_OAUTH_FACEBOOK=false

# ---- API Keys ----
OPENAI_API_KEY=""
GOOGLE_API_KEY=""
FLIPPER_API_KEYS=""

# ---- Rate Limiting ----
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# ---- CAPTCHA (hCaptcha) ----
# Get your keys at: https://www.hcaptcha.com/
NEXT_PUBLIC_HCAPTCHA_SITE_KEY="10000000-ffff-ffff-ffff-000000000001"
HCAPTCHA_SECRET_KEY="0x0000000000000000000000000000000000000000"

# ---- Logging ----
LOG_LEVEL="info"

# ---- Email (Resend) ----
# Get your API key at: https://resend.com/api-keys
RESEND_API_KEY=""
EMAIL_FROM="Flipper AI <notifications@flipper-ai.app>"
APP_URL="http://localhost:3000"

# ---- Error Tracking & Performance (Sentry) ----
# Get your DSN at: https://sentry.io/settings/projects/
# Required for production error tracking and performance monitoring
SENTRY_DSN=""
NEXT_PUBLIC_SENTRY_DSN=""

# Sentry Organization & Project (for source map uploads)
SENTRY_ORG=""
SENTRY_PROJECT=""

# Sentry Auth Token (create at: https://sentry.io/settings/account/api/auth-tokens/)
# Required for uploading source maps in production builds
SENTRY_AUTH_TOKEN=""

# Enable Sentry in development (optional, defaults to false)
# SENTRY_ENABLED="false"
